{
  "name": "dynamic-angular",
  "version": "0.0.0",
  "scripts": {
    "ng": "ng",
    "##########    start json server for fake backend API    ###########################################": "################################################",
    "start:json:server": "json-server --port 5000 json-server/api-1.json",
    "##########    start ng serve with environment.ts for prod or dev    ###########################################": "################################################",
    "start:app:prod": "ng serve --configuration production",
    "start:app:dev": "ng serve --configuration development",
    "##########    start app with environment variables for angular    ###########################################": "################################################",
    "start:app:environment": "cross-env-shell NG_APP_ENV_HEADER=\"Test Header from environment variables\" NG_APP_DATA_URL=\"http://localhost:5000/env-vars-angular\" npm run-script start:app:prod",
    "##########    create open-api code for default    ###########################################": "################################################",
    "create:api:default": "openapi-generator-cli generate -g typescript-angular -i openapi/contract-1/openapi.yml -o build/openapi/contract-1",
    "##########    create open-api code with environment variables    ###########################################": "################################################",
    "prepare:api:environment": "cross-env-shell OPENAPI_GENERATOR_ARGUMENTS=\"--server-variables hostname=localhost:5000,protocol=http\" npm run-script create:api:environment",
    "create:api:environment": "openapi-generator-cli generate -g typescript-angular -i openapi/contract-1/openapi.yml -o build/openapi/contract-1 $OPENAPI_GENERATOR_ARGUMENTS",
    "##########    use APP_INITIALIZER    ######################################": "################################################",
    "create:bundle:appinitializer": "cross-env-shell NG_APP_ENV_HEADER=\"Test Header from environment variables\" NG_APP_DATA_URL=\"http://localhost:5000/env-vars-angular\" npm run-script build",
    "start:bundle:appinitializer": "http-server --proxy http://localhost:8080? dist/dynamic-angular",
    "################################################################################################": "################################################",
    "build": "ng build",
    "watch": "ng build --watch --configuration development",
    "test": "jest --no-cache"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "~13.3.0",
    "@angular/cdk": "^13.3.6",
    "@angular/common": "~13.3.0",
    "@angular/compiler": "~13.3.0",
    "@angular/core": "~13.3.0",
    "@angular/forms": "~13.3.0",
    "@angular/material": "^13.3.6",
    "@angular/platform-browser": "~13.3.0",
    "@angular/platform-browser-dynamic": "~13.3.0",
    "@angular/router": "~13.3.0",
    "rxjs": "~7.5.0",
    "tslib": "^2.3.0",
    "zone.js": "~0.11.4"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "~13.3.5",
    "@angular/cli": "~13.3.5",
    "@angular/compiler-cli": "~13.3.0",
    "@ngx-env/builder": "^2.0.2",
    "@openapitools/openapi-generator-cli": "^2.5.1",
    "@types/jasmine": "~3.10.0",
    "@types/jest": "^27.5.0",
    "@types/node": "^12.11.1",
    "concurrently": "^7.1.0",
    "cross-env": "^7.0.3",
    "http-server": "^14.1.0",
    "jasmine-core": "~4.0.0",
    "jest": "^28.0.3",
    "jest-preset-angular": "12.0.0-next.1",
    "json-server": "^0.17.0",
    "karma": "~6.3.0",
    "karma-chrome-launcher": "~3.1.0",
    "karma-coverage": "~2.1.0",
    "karma-jasmine": "~4.0.0",
    "karma-jasmine-html-reporter": "~1.7.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.6.2",
    "typescript": "~4.6.2"
  }
}
